<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DoiCoSo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:background="@drawable/custom_back"
            android:id="@+id/img_exit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:onClick="backMenu"
            app:srcCompat="@android:drawable/btn_dialog" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi cơ số"
            android:textSize="30sp"
            android:gravity="center"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Cơ số ban đầu:"
            android:textSize="20dp"
            android:gravity="center"></TextView>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_input"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Giá trị cần đổi:"
            android:textSize="20dp"
            android:gravity="center"></TextView>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_value"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Cơ số bạn cần đổi đến:"
            android:textSize="20dp"
            android:gravity="center"></TextView>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:id="@+id/edt_output"></EditText>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/custom_menu"
            android:id="@+id/btn_doi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi"
            android:onClick="clickGiai"
            android:textSize="15dp"></Button>

        <Button
            android:background="@drawable/custom_menu"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:onClick="clickXoa"
            android:textSize="15dp"
            android:id="@+id/btn_xoa"></Button>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Kết Quả:"
            android:textSize="20dp"
            android:gravity="center"></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_res"></EditText>
    </LinearLayout>


</LinearLayout>