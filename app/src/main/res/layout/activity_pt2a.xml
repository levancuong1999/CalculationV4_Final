<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pt2a"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:background="@drawable/custom_back"
            android:id="@+id/imageButton2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:onClick="back"
            app:srcCompat="@android:drawable/btn_dialog" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giải Phương trình 2 ẩn"
        android:textSize="25dp"
        android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="1)"
            android:textSize="25dp"
            android:gravity="center"/>
        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_a"></EditText>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="x +"
            android:textSize="25dp"
            android:gravity="center"/>
        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_b"></EditText>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="y ="
            android:textSize="25dp"
            android:gravity="center"/>
        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_c"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="2)"
            android:textSize="25dp"
            android:gravity="center"/>
        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_a1"></EditText>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="x +"
            android:textSize="25dp"
            android:gravity="center"/>
        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_b1"></EditText>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="y ="
            android:textSize="25dp"
            android:gravity="center"></TextView>
        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_c1"></EditText>
    </LinearLayout>


    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:background="@drawable/custom_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giải"
            android:onClick="onClickResult"
            android:id="@+id/result" />
        <Button
            android:layout_marginLeft="40dp"
            android:background="@drawable/custom_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:onClick="onClickDelete"
            android:id="@+id/delete" />
    </LinearLayout>
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"></TextView>




</LinearLayout>